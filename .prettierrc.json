{
	"printWidth": 80,
	"tabWidth": 4,
	"semi": true,
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"singleQuote": false,
	"trailingComma": "es5",
	"arrowParens": "always",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.html",
			"options": {
				"parser": "html",
				"printWidth": 80,
				"tabWidth": 4,
				"bracketSpacing": true
			}
		},
		{
			"files": "*.js",
			"options": {
				"parser": "babel",
				"printWidth": 80,
				"tabWidth": 4,
				"semi": true,
				"singleQuote": false,
				"trailingComma": "es5",
				"arrowParens": "always"
			}
		},
		{
			"files": "*.css",
			"options": {
				"parser": "css",
				"printWidth": 80,
				"tabWidth": 4,
				"singleQuote": true,
				"bracketSpacing": true,
				"semi": false
			}
		}
	]
}